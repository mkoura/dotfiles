#!/bin/sh

# include ~/.env
[ -e "$HOME/.env" ] && . "$HOME/.env"

# Qt5 and Mate
export QT_STYLE_OVERRIDE=gtk

# for non-gtk apps
#export DESKTOP_SESSION=gnome

# enable HW accel on Firefox
export MOZ_USE_OMTC=1

# create ~/.cache
tmpcache.sh

# fix Java (GUI appears gray only)
#wmname LG3D

# switch off annoying bell
xset b off

# sync clipboard and selection buffer
#autocutsel -fork
#autocutsel -selection PRIMARY -buttonup -fork


# move cursor to top left corner...
#xdotool mousemove 30 30
# ... and mount user volumes
#usermounts.sh

# keyboard layout
#setxkbmap -layout "us,cz" -variant ",qwerty" -option grp:switch,grp:caps_toggle,grp_led:caps

# set trackpoint scrolling
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation" 1
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Button" 2
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Timeout" 200
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Axes" 6 7 4 5

