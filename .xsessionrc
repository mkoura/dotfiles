#!/bin/sh

# set PATH so it includes user's private bin if it exists
[ -d "${HOME}/bin" ] && PATH="${HOME}/bin:$PATH"

# create ~/.cache
tmpcache.sh

# fix Java (GUI appears gray only)
#wmname LG3D

# switch off annoying bell
xset b off

# sync clipboard and selection buffer
autocutsel -fork
autocutsel -selection PRIMARY -buttonup -fork

# urxvt daemon mode
urxvtd -q -o -f

# keyboard layout
#setxkbmap -layout "us,cz" -variant ",qwerty" -option grp:switch,grp:caps_toggle,grp_led:caps

