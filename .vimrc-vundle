set nocompatible

"
" Vundle setting
"
" git clone https://github.com/gmarik/vundle.git ~/.vim/bundle/vundle
"
filetype off

set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

" let Vundle manage Vundle
" required!
Bundle 'gmarik/vundle'

" Installed bundles
Bundle 'altercation/vim-colors-solarized'
Bundle 'Lokaltog/vim-easymotion'
Bundle 'scrooloose/nerdtree'
Bundle 'majutsushi/tagbar'
Bundle 'tpope/vim-fugitive'
Bundle 'SirVer/ultisnips'
Bundle 'Valloric/YouCompleteMe'
Bundle 'scrooloose/syntastic'
Bundle 'jmcantrell/vim-virtualenv'

filetype plugin indent on


"
" Nerdtree
"
nmap <f2> :NERDTreeToggle<CR>

"
" Tagbar
"
nmap <F8> :TagbarToggle<CR>

"
" YouCompleteMe
"
let g:ycm_autoclose_preview_window_after_completion=1


"
" UltiSnips
"
let g:UltiSnipsExpandTrigger="<c-j>"
let g:UltiSnipsJumpForwardTrigger="<c-j>"
let g:UltiSnipsJumpBackwardTrigger="<c-k>"
let g:UltiSnipsListSnippets="<c-e>"
let g:UltiSnipsEditSplit="vertical"


"
" Rope
"
source ~/Source/repos/rope/rope.vim
" disable default shortcuts
let ropevim_enable_shortcuts=0
" open external definitions in new buffer
let ropevim_goto_def_newwin=1


"
" Syntastic
"
let g:syntastic_python_flake8_args="--max-line-length=160"


" syntax highlighting
syntax enable

" color scheme
set background=dark
colorscheme solarized
set t_Co=16

" highlight line with cursor
set cursorline

" show that vim is waiting for key
set showcmd

" bash-like tab completion
set wildmode=longest,list,full
set wildmenu

" mouse support
"set mouse=a

" switch files without saving them first
set hidden

" command output in new tab
command! -nargs=* -complete=shellcmd R tabnew | setlocal buftype=nofile bufhidden=hide noswapfile | r !<args>
